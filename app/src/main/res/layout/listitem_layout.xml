<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F5F5F5"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/phone_thumb"
                android:layout_width="60sp"
                android:layout_height="100sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/iphone_pro_11"/>

            <TextView
                android:id="@+id/phone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#A8A517"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/phone_thumb"
                android:layout_toEndOf="@+id/phone_thumb"
                android:text="Name Of The Phone"

                />

            <TextView
                android:id="@+id/phone_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_name"
                android:layout_toRightOf="@+id/phone_thumb"
                android:layout_toEndOf="@+id/phone_thumb"
                android:textSize="20sp"
                android:paddingBottom="5sp"
                android:text="screen size - $$$" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>